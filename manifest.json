{
  "name": "Lichess Review",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Analyze chesscom games on lichess",
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "host_permissions": ["https://www.chess.com/*", "https://lichess.org/*"],
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/game/live/*", "https://lichess.org/*"],
      "js": ["chessComContentScript.js"]
    }
  ]
}
